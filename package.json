{
  "name": "pulsar-pathfinding",
  "author": "RaduMilici",
  "license": "ISC",
  "homepage": "https://github.com/RaduMilici/pulsar#readme",
  "version": "1.3.10",
  "description": "implementation of Greedy Best-First pathfinding",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "concurrently \"lite-server\" \"npm run build-watch\"",
    "build": "tsc",
    "build-watch": "tsc --watch",
    "format": "prettier --single-quote --trailing-comma es5 --write $(git ls-files \"*.ts\")",
    "test": "jest --maxWorkers=4",
    "test-watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaduMilici/pulsar.git"
  },
  "bugs": {
    "url": "https://github.com/RaduMilici/pulsar/issues"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "concurrently": "^3.5.1",
    "jest": "^23.5.0",
    "lite-server": "^2.3.0",
    "prettier": "^1.13.5",
    "ts-jest": "^23.1.3",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
