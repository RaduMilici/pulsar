{
  "name": "pulsar-pathfinding",
  "author": "RaduMilici",
  "license": "ISC",
  "homepage": "https://github.com/RaduMilici/pulsar#readme",
  "version": "1.3.15",
  "description": "implementation of Greedy Best-First pathfinding",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build-watch": "tsc --watch",
    "format": "prettier --single-quote --trailing-comma es5 --write $(git ls-files \"*.ts\")",
    "test": "jest --maxWorkers=4",
    "test-watch": "jest --maxWorkers=4 --watchAll",
    "madge-circular": "npx madge --circular --extensions ts src",
    "build-debugger": "node scripts/build-debugger/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaduMilici/pulsar.git"
  },
  "bugs": {
    "url": "https://github.com/RaduMilici/pulsar/issues"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "abstract-syntax-tree": "^2.4.0",
    "chalk": "^2.4.2",
    "css-loader": "^3.2.0",
    "fs-extra": "^8.1.0",
    "jest": "^23.6.0",
    "madge": "^3.4.4",
    "monaco-editor": "^0.18.1",
    "monaco-editor-webpack-plugin": "^1.7.0",
    "prettier": "^1.18.2",
    "style-loader": "^1.0.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^6.2.0",
    "ts-morph": "^4.2.0",
    "typescript": "^3.5.3",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
